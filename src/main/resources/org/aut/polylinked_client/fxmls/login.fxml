                        <Insets />
                    </VBox.margin>
                </Label>
                <VBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <JFXTextField fx:id="emailText" promptText="Email">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="passwordText" promptText="Password">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </JFXTextField>
