<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" stylesheets="@../styles/light/signup.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.aut.polylinked_client.control.SignupController">
   <left>
      <VBox id="sideBox" alignment="CENTER" prefHeight="500.0" prefWidth="382.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Welcome To PolyLinked!" />
