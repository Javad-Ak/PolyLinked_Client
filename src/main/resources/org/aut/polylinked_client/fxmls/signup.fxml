                  <JFXTextField fx:id="additionalNameTF" promptText="Additional Name (optional)" />
                  <JFXTextField fx:id="emailTF" promptText="Email">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="passwordTF" promptText="Password">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="confirmPasswordTF" promptText="Confirm Password" />
